<style>
    .navbar-nav {
        padding-left: 20%;
    }
</style>
@using System.Text.RegularExpressions
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ">
            <li class="nav-item px-lg-4">
                @{
        var input = User.Identity.GetUserName();
        string[] userName = Regex.Split(input, @"[0-9]");
                }
                @Html.ActionLink("مرحبا " + userName[0], "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "text-decoration-none" })
            </li>
            <li class="nav-item px-lg-4"><a class="text-decoration-none" href="javascript:document.getElementById('logoutForm').submit()">تسجيل الخروج</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav " id="loginAndRegister">
        <li class="nav-item">
            <a class="nav-link fw-bold text-light text-nowrap" href="/Account/Login" id="loginLink">تسجيل الدخول</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fw-bold text-light text-nowrap" href="/Account/Register" id="loginLink"> الإشتراك</a>
        </li>

    </ul>

}
