@using GradProjectV5.Models
@model LoginViewModel



<div class="container-fluid ">
    <div class="row">
        <div class="col-sm-10">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2 class="py-2 p-2 fw-bold lead fs-3 ">تسجيل الدخول</h2>
                    <div class="col-sm-10"><hr /> </div>


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group pt-3">
                        @Html.LabelFor(m => m.Email, new { @class = "col-sm-10 control-label p-2 " })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control p-2 col-sm-10" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group pt-3">
                        @Html.LabelFor(m => m.Password, new { @class = "col-sm-10 control-label p-1" })
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-sm-10" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <div class="col-sm-10">
                            <div class="checkbox p-1">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe, new { @class = "px-1" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10 py-3">
                        <input type="submit" value="تسجيل الدخول" class="btn btn-primary w-100 py-2" />
                    </div>
                    <p>
                        @Html.ActionLink("ليس لديك حساب ؟ انضم الآن", "Register", "", new { @class = "text-decoration-none" })
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}